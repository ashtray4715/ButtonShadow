<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- shadow background -->
    <item android:width="50dp" android:height="50dp" android:gravity="center">
        <shape android:shape="oval" >
            <gradient
                android:angle="270"
                android:startColor="#0B000000"
                android:endColor="#26000000"
                android:type="linear" />
        </shape>
    </item>

    <!-- plus button circular background -->
    <item android:width="40dp" android:height="40dp" android:gravity="center">
        <shape android:shape="oval" >
            <solid android:color="#fff" />
        </shape>
    </item>

    <!-- plus icon itself -->
    <item
        android:width="36dp"
        android:height="36dp"
        android:drawable="@drawable/ic_baseline_add_24"
        android:gravity="center"/>

</layer-list>